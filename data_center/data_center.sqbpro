--UPDATE tpex_bulletin_attention SET 公告日期 = REPLACE(roc_date, '-', '.');

-- ② 將民國日期轉換成 UNIX timestamp（秒數）
UPDATE tpex_bulletin_attention
SET 公告日期_ts = strftime(
    '%s',
    printf(
        '%04d-%02d-%02d',
        CAST(substr(公告日期, 1, instr(公告日期, '.') - 1) AS INTEGER) + 1911,
        CAST(substr(公告日期, instr(公告日期, '.') + 1,
             instr(substr(公告日期, instr(公告日期, '.') + 1), '.') - 1) AS INTEGER),
        CAST(substr(公告日期, length(公告日期) - 1, 2) AS INTEGER)
    )
)
WHERE 公告日期_ts IS NULL OR 公告日期_ts = '';

