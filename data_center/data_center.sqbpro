CREATE VIEW IF NOT EXISTS v_data_source AS
SELECT
    DS.name,
	DS.storage_table,
	DS.api_method,
    DS.src_link || DS.api_path || '?' || DS.api_params AS api_sample,
	DS.src_link || DS.web_path AS web_page,
	DS.api_res_sample,
	DS.memo
FROM
    data_source AS DS;

CREATE UNIQUE INDEX idx_data_source_name ON data_source (name);

